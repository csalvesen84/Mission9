@{
    ViewData["Title"] = "Checkout";
}
@model Purchase

<h2>Checkout</h2>
<p>Please enter your information below, and then we will confirm your purchase and send your books!</p>
<p>Fields with a "*" are required.</p>

<form method="post" asp-action="Checkout">

    <div asp-validation-summary="All" class="text-danger"></div>

    <h4>Ship to:</h4>
    <div class="form-group">
        <label asp-for="Name">*Name:</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <h4>Address</h4>
    <div class="form-group">
        <label asp-for="AddressLine1">*Address Line 1:</label>
        <input asp-for="AddressLine1" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="AddressLine2">Address Line 2:</label>
        <input asp-for="AddressLine2" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="AddressLine3">Address Line 3:</label>
        <input asp-for="AddressLine3" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="City">*City:</label>
        <input asp-for="City" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="State">*State/Province:</label>
        <input asp-for="State" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Zip">*Zip Code:</label>
        <input asp-for="Zip" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Country">*Country:</label>
        <input asp-for="Country" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <p style="font-size:3px">All purchases are final. There are no returns. CongoBasin is not liable if the books are lost in the mail, but we would be happy to replace them with new books for the original price.</p>
        <button type="submit" class="btn btn-sm btn-danger" style="background-color: blue;">Checkout</button>
    </div>
</form>